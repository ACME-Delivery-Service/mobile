<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorWhite"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/text_date_divider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="15dp"
        android:textSize="7pt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="07.08.18" />

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_delivery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/colorWhite"
        card_view:cardCornerRadius="3dp"
        card_view:cardElevation="3dp"
        card_view:cardUseCompatPadding="true"
        card_view:layout_constraintStart_toStartOf="parent"
        card_view:layout_constraintTop_toBottomOf="@id/text_date_divider">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <TextView
                android:id="@+id/text_delivery_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:textSize="10pt"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginEnd="10dp"
                android:textStyle="bold"
                card_view:layout_constraintHorizontal_weight="0.5"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toTopOf="parent"
                tools:text="16:00 - 19:00" />

            <TextView
                android:id="@+id/text_parcel_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textSize="7pt"
                card_view:layout_constraintStart_toStartOf="@id/text_delivery_time"
                card_view:layout_constraintTop_toBottomOf="@id/text_delivery_time"
                tools:text="Parcel #0213012" />

            <TextView
                android:id="@+id/text_parcel_address"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textSize="8pt"
                card_view:layout_constraintStart_toStartOf="@id/text_delivery_time"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintTop_toBottomOf="@id/text_parcel_id"
                tools:text="One Apple Park Way Cupertino, CA 95014" />
            
            <View
                android:id="@+id/view_divider"
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:background="@color/colorDivider"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginEnd="10dp"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintTop_toBottomOf="@id/text_parcel_address"/>

            <TextView
                android:id="@+id/text_delivery_weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginEnd="5dp"
                android:textSize="6pt"
                android:gravity="start"
                card_view:layout_constraintStart_toStartOf="@id/text_delivery_time"
                card_view:layout_constraintEnd_toStartOf="@id/text_estimated_time"
                card_view:layout_constraintTop_toBottomOf="@id/view_divider"
                tools:text="Small box 0.35 kg"/>


            <TextView
                android:id="@+id/text_estimated_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:textSize="9pt"
                android:gravity="end"
                card_view:layout_constraintStart_toEndOf="@id/text_delivery_weight"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintTop_toTopOf="@id/text_delivery_weight"
                tools:text="Time Remaining:55min"/>

            <Button
                android:id="@+id/button_delivery_action"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/colorWhite"
                android:textAllCaps="false"
                android:background="@color/colorPrimary"
                android:foreground="?attr/selectableItemBackground"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintEnd_toStartOf="@id/button_details"
                card_view:layout_constraintTop_toBottomOf="@id/text_estimated_time"
                />

            <Button
                android:id="@+id/button_details"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/colorPrimary"
                android:text="@string/text_details"
                android:textAllCaps="false"
                android:background="@color/colorDivider"
                android:foreground="?attr/selectableItemBackground"
                card_view:layout_constraintStart_toEndOf="@id/button_delivery_action"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintTop_toBottomOf="@id/text_estimated_time"
                />
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>